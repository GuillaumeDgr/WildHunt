<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.indianacroft.wildhunt.InscriptionActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/wood_background3"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/imageViewInscriptionLogo"
        android:layout_width="116dp"
        android:layout_height="101dp"
        app:srcCompat="@drawable/rosedesventslogo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editTextInscriptionPseudo"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextInscriptionPseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:hint="Choose your name"
        android:textAllCaps="false"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/editTextInscriptionMail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewInscriptionLogo" />

    <EditText
        android:id="@+id/editTextInscriptionMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:hint="Write your email"
        android:textAllCaps="false"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/editTextInscriptionPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextInscriptionPseudo" />

    <EditText
        android:id="@+id/editTextInscriptionPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:hint="Write your password"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/name_quest"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextInscriptionMail" />

    <EditText
        android:id="@+id/name_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:hint="Please confirm your password"
        android:textAllCaps="false"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonInscriptionSignIn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextInscriptionPassword" />

    <Button
        android:id="@+id/buttonInscriptionSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="SIGN IN"
        android:background="@drawable/button_shape"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_quest" />

</android.support.constraint.ConstraintLayout>
