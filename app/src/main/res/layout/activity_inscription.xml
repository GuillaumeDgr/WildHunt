<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.indianacroft.wildhunt.InscriptionActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/wood_background"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="116dp"
        android:layout_height="101dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColorHint="@android:color/holo_green_dark"
        android:textColor="@android:color/holo_green_dark"
        android:hint="PSEUDO"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editText2"
        app:layout_constraintBottom_toTopOf="@+id/mail"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColorHint="@android:color/holo_green_dark"
        android:textColor="@android:color/holo_green_dark"
        android:hint="EMAil or PSEUDO"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <EditText
        android:id="@+id/password"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColorHint="@android:color/holo_green_dark"
        android:textColor="@android:color/holo_green_dark"
        android:hint="PASSWORD"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/mail" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColorHint="@android:color/holo_green_dark"
        android:textColor="@android:color/holo_green_dark"
        android:hint="Password Confirmation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editText"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <Button
        android:id="@+id/button2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

</android.support.constraint.ConstraintLayout>
