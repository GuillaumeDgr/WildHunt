<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="fr.indianacroft.wildhunt.ChallengesActivity"
        android:background="@drawable/wood_background3">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_padding_top"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="@android:color/transparent"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="8dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/imageViewAvatar"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/man"
                    android:layout_gravity="end"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CHALLENGE\nCREATION"
                    android:gravity="center"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:layout_editor_absoluteY="120dp"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:layout_width="363dp"
                android:layout_height="22dp"
                android:text="Create your challenge name"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/textView9"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/editTextChallengeName"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextChallengeName"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Add challenge name"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <ImageView
                android:id="@+id/imageViewInscriptionLogo"
                android:layout_width="161dp"
                android:layout_height="142dp"
                app:srcCompat="@android:drawable/checkbox_off_background"
                app:layout_constraintRight_toLeftOf="@+id/spinner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:layout_width="164dp"
                android:layout_height="24dp"
                android:text="Upload your photo"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/textView10"
                app:layout_constraintRight_toLeftOf="@+id/textView5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/imageViewInscriptionLogo"
                app:layout_constraintTop_toBottomOf="@+id/editTextChallengeName" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="192dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Choose your difficulty"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/textView10"
                app:layout_constraintBottom_toTopOf="@+id/spinner"
                app:layout_constraintTop_toBottomOf="@+id/editTextChallengeName" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="193dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/editText3"
                android:layout_toRightOf="@+id/editText3"
                android:layout_toEndOf="@+id/editText3"
                android:layout_below="@+id/textView4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imageViewInscriptionLogo"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="361dp"
                android:layout_height="18dp"
                android:text="Add a hint to help players solve your challenge"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/editTextHint"
                app:layout_constraintTop_toBottomOf="@+id/editTextChallengeDescription" />

            <EditText
                android:id="@+id/editTextHint"
                android:layout_width="358dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Write your hint"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/butCreateChallenge"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="193dp"
                android:layout_height="27dp"
                android:text="Describe your challenge"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imageViewInscriptionLogo"
                app:layout_constraintBottom_toTopOf="@+id/editTextChallengeDescription"
                app:layout_constraintTop_toBottomOf="@+id/spinner" />

            <EditText
                android:id="@+id/editTextChallengeDescription"
                android:layout_width="189dp"
                android:layout_height="82dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Challenge\nDescription"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imageViewInscriptionLogo"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <Button
                android:id="@+id/butCreateChallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create challenge"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_shape"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextHint" />

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimaryDark"
            app:menu="@menu/navigation"
            app:itemIconTint="#FFFFFF"
            app:itemTextColor="#FFFFFF"
            android:layout_gravity="bottom"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>

