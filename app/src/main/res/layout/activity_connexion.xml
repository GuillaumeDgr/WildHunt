<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_background3"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textViewConnexionWelcome"
        android:layout_width="368dp"
        android:layout_height="30dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Welcome to the Wild Hunt"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/imageViewConnexionLogo"
        android:layout_width="142dp"
        android:layout_height="99dp"
        app:srcCompat="@drawable/rosedesventslogo"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewConnexionWelcome"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewConnexionWelcome"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textViewConnexionWelcome" />

    <Button
        android:id="@+id/buttonConnexionPlay"
        android:layout_width="142dp"
        android:layout_height="65dp"
        android:fontFamily="casual"
        android:text="PLAY"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold|italic"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConnexionLogo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewConnexionLogo"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/imageViewConnexionLogo" />

    <EditText
        android:id="@+id/editTextConnexionPseudo"
        android:layout_width="235dp"
        android:layout_height="39dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="Enter Mail"
        android:textColor="@android:color/holo_green_dark"
        android:textColorHint="@android:color/holo_green_dark"
        android:textStyle="italic"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="@+id/buttonConnexionLogIn"
        app:layout_constraintRight_toRightOf="@+id/buttonConnexionLogIn"
        app:layout_constraintTop_toBottomOf="@+id/buttonConnexionLogIn" />

    <EditText
        android:id="@+id/editTextConnexionPassword"
        android:layout_width="235dp"
        android:layout_height="39dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="Enter password"
        android:textColor="@android:color/holo_green_dark"
        android:textColorHint="@android:color/holo_green_dark"
        android:textStyle="italic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/editTextConnexionPseudo"
        app:layout_constraintRight_toRightOf="@+id/editTextConnexionPseudo"
        app:layout_constraintTop_toBottomOf="@+id/editTextConnexionPseudo" />

    <Button
        android:id="@+id/buttonConnexionLogIn"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:fontFamily="serif"
        android:text="LOG IN"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="italic"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonConnexionPlay"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonConnexionPlay"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/buttonConnexionPlay" />

    <Button
        android:id="@+id/buttonConnexionSignIn"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:fontFamily="serif"
        android:text="SIGN IN"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold|italic"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextConnexionPassword"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/editTextConnexionPassword"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/editTextConnexionPassword"
        app:layout_constraintHorizontal_bias="0.505" />
</android.support.constraint.ConstraintLayout>