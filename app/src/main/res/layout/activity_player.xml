<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@drawable/backgroundtest2">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="fr.indianacroft.wildhunt.PlayerActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_padding_top"
            android:description="@style/AppTheme.AppBarOverlay"
            android:background="@drawable/bars_colors">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:background="@android:color/transparent">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="@string/profil"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/imageViewAvatar"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/man"
                    android:layout_gravity="end"
                    android:padding="5dp"/>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteY="64dp"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                style="@style/YellowTitle"
                android:id="@+id/playerActivityNameQuestTitle"
                tools:text="Party Name"
                app:layout_constraintBottom_toTopOf="@+id/playerActivityNumChallenge"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Button
                style="@style/YellowTitle"
                android:background="@drawable/layout_colors2"
                android:id="@+id/playerActivityNumChallenge"
                tools:text="Challenge N°"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/playerActivityNameQuestTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:id="@+id/imageViewHomeJoueurToFind"
                android:layout_width="345dp"
                android:layout_height="262dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/photo_camera"
                app:layout_constraintBottom_toTopOf="@+id/buttonHomeJoueurHint"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/YellowTitle"
                android:padding="2dp"
                android:id="@+id/textViewPlayerActivityHint"
                tools:text="Ici sera présenter le texte de présentation du challenge et de la photo a trouver. Exemple quest_name du quartier etc"
                app:layout_constraintBottom_toTopOf="@+id/buttonHomeJoueurQuitChallenge"
                app:layout_constraintTop_toBottomOf="@+id/buttonHomeJoueurHint"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Button
                style="@style/ButtonBlue"
                android:id="@+id/buttonHomeJoueurHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indice"
                app:layout_constraintBottom_toTopOf="@+id/textViewPlayerActivityHint"
                app:layout_constraintTop_toBottomOf="@+id/imageViewHomeJoueurToFind"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Button
                style="@style/ButtonBlue"
                android:id="@+id/buttonHomeJoueurSendSolution"
                android:layout_width="126dp"
                android:layout_height="66dp"
                android:text="Send Solution"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPlayerActivityHint"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/buttonHomeJoueurQuitChallenge" />

            <Button
                style="@style/ButtonYellow"
                android:id="@+id/buttonHomeJoueurQuitChallenge"
                android:layout_width="175dp"
                android:layout_height="48dp"
                android:text="Abandon défi"
                app:layout_constraintBottom_toTopOf="@+id/buttonHomeJoueurQuitParty"
                app:layout_constraintTop_toBottomOf="@+id/textViewPlayerActivityHint"
                app:layout_constraintRight_toLeftOf="@+id/buttonHomeJoueurSendSolution"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Button
                style="@style/ButtonYellow"
                android:id="@+id/buttonHomeJoueurQuitParty"
                android:layout_width="175dp"
                android:layout_height="48dp"
                android:text="Abandon partie"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonHomeJoueurQuitChallenge"
                app:layout_constraintRight_toLeftOf="@+id/buttonHomeJoueurSendSolution"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                style="@style/YellowTitle"
                android:id="@+id/textView7"
                android:text="Mettre la difficulté ici"
                app:layout_constraintBottom_toTopOf="@+id/imageViewHomeJoueurToFind"
                app:layout_constraintTop_toBottomOf="@+id/playerActivityNumChallenge"
                app:layout_constraintRight_toLeftOf="@+id/playerActivityNumChallenge"
                app:layout_constraintLeft_toLeftOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>

