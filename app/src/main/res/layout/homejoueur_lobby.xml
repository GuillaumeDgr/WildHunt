<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewLobbyPhoto"
        android:layout_width="61dp"
        android:layout_height="62dp"
        app:srcCompat="@drawable/photo_camera"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonLobbyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/customborder"
        android:text="NOM PARTIE"
        android:textColor="#FFFFFF"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintLeft_toRightOf="@+id/imageViewLobbyPhoto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewLobbyPhoto" />

    <Button
        android:id="@+id/buttonLobbyDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-8dp"
        android:background="@drawable/customborder"
        android:text="DECOUVRIR PARTIE"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/buttonLobbyName"
        app:layout_constraintTop_toTopOf="@+id/buttonLobbyName" />

    <TextView
        android:id="@+id/textViewLobbyDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="26dp"
        android:text="Ce texte doit expliquer en quoi consiste la partie, le nombre de challenges, les quartiers etc, etc etc, une description quoi"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintLeft_toLeftOf="@+id/buttonLobbyName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLobbyName" />

</android.support.constraint.ConstraintLayout>