<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.indianacroft.wildhunt.HomeJoueurActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        style="@style/YellowTitle"
        android:id="@+id/playerActivityNameQuestTitle"
        tools:text="Party Name"
        tools:layout_editor_absoluteY="6dp"
        tools:layout_editor_absoluteX="-2dp"
        android:layout_height="41dp"
        android:layout_width="364dp"
        android:layout_marginTop="10dp"/>

    <Button
        style="@style/YellowTitle"
        android:background="@drawable/layout_colors2"
        android:id="@+id/playerActivityNumChallenge"
        tools:text="Challenge N°"
        tools:layout_editor_absoluteY="47dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imageViewHomeJoueurToFind"
        android:layout_width="345dp"
        android:layout_height="262dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/camera"
        tools:layout_editor_absoluteY="106dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <TextView
        style="@style/YellowTitle"
        android:padding="2dp"
        android:id="@+id/textViewPlayerActivityHint"
        tools:text="Ici sera présenter le texte de présentation du challenge et de la photo a trouver. Exemple quest_name du quartier etc"
        tools:layout_editor_absoluteY="426dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="10dp"/>

    <Button
        style="@style/ButtonBlue"
        android:id="@+id/buttonHomeJoueurHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indice"
        app:layout_constraintBottom_toTopOf="@+id/textViewPlayerActivityHint"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHomeJoueurToFind"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>

    <Button
        style="@style/ButtonBlue"
        android:id="@+id/buttonHomeJoueurSendSolution"
        android:layout_width="126dp"
        android:layout_height="66dp"
        android:text="Send Solution"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlayerActivityHint"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonHomeJoueurQuitChallenge"
        android:visibility="gone"/>

    <Button
        style="@style/ButtonYellow"
        android:id="@+id/buttonHomeJoueurQuitChallenge"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:text="Abandon défi"
        app:layout_constraintBottom_toTopOf="@+id/buttonHomeJoueurQuitParty"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlayerActivityHint"
        app:layout_constraintRight_toLeftOf="@+id/buttonHomeJoueurSendSolution"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>

    <Button
        style="@style/ButtonYellow"
        android:id="@+id/buttonHomeJoueurQuitParty"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:text="Abandon partie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeJoueurQuitChallenge"
        app:layout_constraintRight_toLeftOf="@+id/buttonHomeJoueurSendSolution"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>

    <TextView
        style="@style/YellowTitle"
        android:id="@+id/textView7"
        android:text="Mettre la difficulté ici"
        tools:layout_editor_absoluteY="392dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>