<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.indianacroft.wildhunt.HomeJoueur"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        style="@style/YellowTitle"
        android:id="@+id/playerActivityNameQuestTitle"
        tools:text="Party Name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/playerActivityNumChallenge"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        style="@style/ButtonBlue"
        android:id="@+id/playerActivityNumChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Challenge N°"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/playerActivityNameQuestTitle"
        app:layout_constraintHorizontal_bias="0.516" />

    <ImageView
        android:id="@+id/imageViewHomeJoueurToFind"
        android:layout_width="217dp"
        android:layout_height="209dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/photo_camera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonHomeJoueurHint"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textViewPlayerActivityHint"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        tools:text="Ici sera présenter le texte de présentation du challenge et de la photo a trouver. Exemple quest_name du quartier etc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonHomeJoueurSendSolution"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeJoueurHint" />
        <!--android:visibility="gone"-->/>

    <Button
        style="@style/ButtonBlue"
        android:id="@+id/buttonHomeJoueurHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewPlayerActivityHint"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHomeJoueurToFind" />

    <Button
        style="@style/ButtonBlue"
        android:id="@+id/buttonHomeJoueurSendSolution"
        android:layout_width="126dp"
        android:layout_height="66dp"
        android:text="Send Solution"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonHomeJoueurQuitChallenge"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlayerActivityHint" />

    <Button
        android:id="@+id/buttonHomeJoueurQuitChallenge"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:text="Abandon défi"
        app:layout_constraintRight_toLeftOf="@+id/buttonHomeJoueurQuitParty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeJoueurSendSolution" />

    <Button
        android:id="@+id/buttonHomeJoueurQuitParty"
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:text="Abandon partie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonHomeJoueurQuitChallenge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHomeJoueurSendSolution" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mettre la difficulté ici"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageViewHomeJoueurToFind"
        app:layout_constraintTop_toBottomOf="@+id/playerActivityNumChallenge" />

</android.support.constraint.ConstraintLayout>
